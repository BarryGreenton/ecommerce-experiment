<!DOCTYPE html>
<html lang="zh-CN">
  <head>
    <meta charset="UTF-8" />
    <title>客户管理 - 管理后台</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="container mt-4">
      <div class="mb-3 d-flex justify-content-between">
        <a href="/" class="btn btn-link">&larr; 返回前台</a>
        <div>
          <a href="/admin/products" class="btn btn-outline-secondary">商品管理</a>
          <a href="/admin/orders" class="btn btn-outline-secondary">订单管理</a>
          <a href="/admin/logs" class="btn btn-outline-secondary">日志</a>
        </div>
      </div>

      <h1 class="mb-3">客户管理</h1>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>用户ID</th>
            <th>用户名</th>
            <th>邮箱</th>
          </tr>
        </thead>
        <tbody>
          <% customers.forEach(c => { %>
          <tr>
            <td><%= c.id %></td>
            <td><%= c.username %></td>
            <td><%= c.email || '-' %></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </body>
</html>


